<%= simple_form_for [@photo, @comment], remote: true, validate: true do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <%= f.input :parent_id, as: :hidden, input_html: { value: @comment_old.id } %>

  <div class="form-inputs">
    <%= f.input :description, validate: { presence: true } %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
<%= link_to "Back", photo_path(@photo), remote: true, class: "btn btn-primary" %>
