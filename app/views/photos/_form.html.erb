<%= simple_form_for @photo do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description, :as => :ckeditor %>
    <%= f.input :image_url, as: :file %>
    <%= f.simple_fields_for :cate_photos do |cate_photos| %>
      <%= render 'cate_photo_fields', f: cate_photos %>
    <% end %>
    <div class="links">
      <%= link_to_add_association t("views.photos.form.add_category"), f, :cate_photos, class: "btn btn-primary" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
